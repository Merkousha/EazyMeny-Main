@{
    ViewData["Title"] = "داشبورد";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="mb-0">
                <i class="bi bi-speedometer2 me-2"></i>
                خوش آمدید، @User.Identity!.Name!
            </h2>
            @if (!string.IsNullOrEmpty(ViewBag.RestaurantName))
            {
                <p class="text-muted mb-0">
                    <i class="bi bi-building me-1"></i>
                    رستوران: <strong>@ViewBag.RestaurantName</strong>
                </p>
            }
        </div>
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.RestaurantSlug))
    {
        <!-- آمار سریع -->
        <div class="row g-4 mb-4">
            <!-- کارت سفارشات -->
            <div class="col-12 col-md-6 col-lg-3">
                <div class="card border-warning shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-1">سفارشات امروز</h6>
                                <h3 class="mb-0">0</h3>
                            </div>
                            <div class="bg-warning bg-opacity-25 rounded-circle p-3">
                                <i class="bi bi-cart3 fs-2 text-warning"></i>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-top-0">
                        <a href="/Restaurant/Order/Index" class="text-decoration-none">
                            مشاهده سفارشات <i class="bi bi-arrow-left"></i>
                        </a>
                    </div>
                </div>
            </div>

            <!-- کارت محصولات -->
            <div class="col-12 col-md-6 col-lg-3">
                <div class="card border-success shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-1">محصولات فعال</h6>
                                <h3 class="mb-0">-</h3>
                            </div>
                            <div class="bg-success bg-opacity-25 rounded-circle p-3">
                                <i class="bi bi-menu-button-wide fs-2 text-success"></i>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-top-0">
                        <a href="/Restaurant/Product/Index" class="text-decoration-none">
                            مدیریت منو <i class="bi bi-arrow-left"></i>
                        </a>
                    </div>
                </div>
            </div>

            <!-- کارت رزرو -->
            <div class="col-12 col-md-6 col-lg-3">
                <div class="card border-info shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-1">رزروهای امروز</h6>
                                <h3 class="mb-0">0</h3>
                            </div>
                            <div class="bg-info bg-opacity-25 rounded-circle p-3">
                                <i class="bi bi-calendar-check fs-2 text-info"></i>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-top-0">
                        <a href="/Restaurant/Reservation/Index" class="text-decoration-none">
                            مشاهده رزروها <i class="bi bi-arrow-left"></i>
                        </a>
                    </div>
                </div>
            </div>

            <!-- کارت وب‌سایت -->
            <div class="col-12 col-md-6 col-lg-3">
                <div class="card border-primary shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-1">وضعیت وب‌سایت</h6>
                                <h3 class="mb-0">
                                    @if (ViewBag.IsWebsitePublished == true)
                                    {
                                        <span class="badge bg-success">منتشر شده</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">غیرفعال</span>
                                    }
                                </h3>
                            </div>
                            <div class="bg-primary bg-opacity-25 rounded-circle p-3">
                                <i class="bi bi-globe fs-2 text-primary"></i>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-top-0">
                        <a href="/Restaurant/Website/Index" class="text-decoration-none">
                            مدیریت وب‌سایت <i class="bi bi-arrow-left"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- دسترسی سریع -->
        <div class="row g-4">
            <!-- کارت اشتراک -->
            <div class="col-12 col-lg-6">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-credit-card me-2"></i>
                            اشتراک فعلی
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="text-muted mb-3">
                            برای مشاهده جزئیات اشتراک یا تمدید آن، به بخش مدیریت اشتراک مراجعه کنید.
                        </p>
                        <a href="/Restaurant/Subscription/Index" class="btn btn-outline-primary">
                            <i class="bi bi-arrow-clockwise me-2"></i>
                            مدیریت اشتراک
                        </a>
                    </div>
                </div>
            </div>

            <!-- کارت منوی دیجیتال -->
            <div class="col-12 col-lg-6">
                <div class="card shadow-sm h-100 border-info">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-qr-code me-2"></i>
                            منوی دیجیتال
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="text-muted mb-3">
                            مشتریان شما می‌توانند منوی رستوران را به صورت آنلاین مشاهده کنند
                        </p>
                        <div class="d-grid gap-2">
                            <button class="btn btn-info" onclick="viewPublicMenu()">
                                <i class="bi bi-eye me-2"></i>
                                مشاهده منو
                            </button>
                            <button class="btn btn-outline-info" onclick="copyMenuLink()">
                                <i class="bi bi-link-45deg me-2"></i>
                                کپی لینک منو
                            </button>
                        </div>
                        <small class="text-muted mt-2 d-block">
                            <i class="bi bi-info-circle me-1"></i>
                            لینک منو: <span class="fw-bold" id="menuLinkDisplay">@($"{Context.Request.Scheme}://{Context.Request.Host}/menu/{ViewBag.RestaurantSlug}")</span>
                        </small>
                    </div>
                </div>
            </div>
        </div>

        <!-- دستورالعمل‌ها -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">
                            <i class="bi bi-lightbulb me-2"></i>
                            شروع سریع
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <h6><i class="bi bi-1-circle text-primary me-2"></i>ایجاد منو</h6>
                                <p class="text-muted small">
                                    دسته‌بندی‌ها و محصولات خود را اضافه کنید
                                </p>
                            </div>
                            <div class="col-md-4">
                                <h6><i class="bi bi-2-circle text-primary me-2"></i>تنظیم وب‌سایت</h6>
                                <p class="text-muted small">
                                    قالب دلخواه را انتخاب و منتشر کنید
                                </p>
                            </div>
                            <div class="col-md-4">
                                <h6><i class="bi bi-3-circle text-primary me-2"></i>به اشتراک بگذارید</h6>
                                <p class="text-muted small">
                                    QR Code یا لینک منو را با مشتریان به اشتراک بگذارید
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- رستورانی وجود ندارد -->
        <div class="row">
            <div class="col-12">
                <div class="alert alert-warning">
                    <h5><i class="bi bi-exclamation-triangle me-2"></i>رستورانی ثبت نشده</h5>
                    <p class="mb-0">
                        برای شروع، ابتدا باید رستوران خود را ایجاد کنید.
                    </p>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        const restaurantSlug = '@ViewBag.RestaurantSlug';

        function viewPublicMenu() {
            if (!restaurantSlug) {
                alert('لطفاً ابتدا رستوران خود را ایجاد کنید');
                return;
            }
            window.open('/menu/' + restaurantSlug, '_blank');
        }

        function copyMenuLink() {
            if (!restaurantSlug) {
                alert('لطفاً ابتدا رستوران خود را ایجاد کنید');
                return;
            }

            const menuUrl = window.location.origin + '/menu/' + restaurantSlug;
            
            if (navigator.clipboard && navigator.clipboard.writeText) {
                navigator.clipboard.writeText(menuUrl)
                    .then(() => {
                        const btn = event.target;
                        const originalHtml = btn.innerHTML;
                        btn.innerHTML = '<i class="bi bi-check-circle me-2"></i>کپی شد!';
                        btn.classList.remove('btn-outline-info');
                        btn.classList.add('btn-success');
                        
                        setTimeout(() => {
                            btn.innerHTML = originalHtml;
                            btn.classList.remove('btn-success');
                            btn.classList.add('btn-outline-info');
                        }, 2000);
                    })
                    .catch(() => {
                        alert('لینک منو:\n' + menuUrl);
                    });
            } else {
                alert('لینک منو:\n' + menuUrl);
            }
        }
    </script>
}
