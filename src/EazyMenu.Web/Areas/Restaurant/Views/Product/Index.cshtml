@model IEnumerable<EazyMenu.Application.Common.Models.Product.ProductListDto>

@{
    ViewData["Title"] = "مدیریت منو";
    var products = Model?.ToList() ?? new List<EazyMenu.Application.Common.Models.Product.ProductListDto>();
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="bi bi-card-list me-2"></i>مدیریت منو و محصولات</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home" asp-area="">خانه</a></li>
                    <li class="breadcrumb-item active">مدیریت منو</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12 d-flex flex-wrap gap-2">
            <a asp-area="Restaurant" asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>
                افزودن محصول جدید
            </a>
            <a asp-area="Restaurant" asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-collection me-2"></i>
                مدیریت دسته‌بندی‌ها
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">لیست محصولات</h5>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (!products.Any())
                    {
                        <div class="text-center text-muted py-5">
                            <i class="bi bi-inbox fs-1 d-block mb-3"></i>
                            <h5>هیچ محصولی یافت نشد</h5>
                            <p class="mb-3">برای شروع مدیریت منو، لطفاً یک محصول جدید اضافه کنید.</p>
                            <a asp-area="Restaurant" asp-controller="Product" asp-action="Create" class="btn btn-primary">
                                <i class="bi bi-plus-circle me-2"></i>
                                افزودن محصول جدید
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>محصول</th>
                                        <th>دسته‌بندی</th>
                                        <th class="text-center">ویژگی‌ها</th>
                                        <th class="text-end">قیمت</th>
                                        <th class="text-center">موجودی</th>
                                        <th class="text-center">وضعیت</th>
                                        <th class="text-center">عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in products)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="product-thumbnail me-3">
                                                        <img src="@(string.IsNullOrWhiteSpace(product.Image1Url) ? Url.Content("~/images/placeholders/product.png") : product.Image1Url)" alt="@product.Name" class="rounded" />
                                                    </div>
                                                    <div>
                                                        <h6 class="mb-1">@product.Name</h6>
                                                        @if (!string.IsNullOrWhiteSpace(product.NameEn))
                                                        {
                                                            <div class="text-muted small">@product.NameEn</div>
                                                        }
                                                        <div class="text-muted small">ترتیب نمایش: @product.DisplayOrder</div>
                                                        <div class="text-muted small">تاریخ ایجاد: @product.CreatedAt.ToString("yyyy/MM/dd")</div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary-subtle text-secondary">
                                                    <i class="bi bi-folder2-open me-1"></i>@product.CategoryName
                                                </span>
                                            </td>
                                            <td class="text-center">
                                                <div class="d-flex align-items-center justify-content-center gap-1 flex-wrap">
                                                    @if (product.IsNew)
                                                    {
                                                        <span class="badge bg-success-subtle text-success"><i class="bi bi-stars me-1"></i>جدید</span>
                                                    }
                                                    @if (product.IsPopular)
                                                    {
                                                        <span class="badge bg-warning-subtle text-warning"><i class="bi bi-fire me-1"></i>محبوب</span>
                                                    }
                                                    @if (!product.IsAvailable)
                                                    {
                                                        <span class="badge bg-danger-subtle text-danger"><i class="bi bi-slash-circle me-1"></i>ناموجود</span>
                                                    }
                                                </div>
                                            </td>
                                            <td class="text-end">
                                                @if (product.DiscountedPrice.HasValue)
                                                {
                                                    <div class="fw-bold text-success">@product.DiscountedPrice.Value.ToString("N0") تومان</div>
                                                    <div class="text-muted small"><del>@product.Price.ToString("N0") تومان</del></div>
                                                }
                                                else
                                                {
                                                    <div class="fw-bold">@product.Price.ToString("N0") تومان</div>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <span class="badge @(product.StockStatus switch
                                                {
                                                    "ناموجود" => "bg-danger-subtle text-danger",
                                                    "کمبود موجودی" => "bg-warning-subtle text-warning",
                                                    _ => "bg-primary-subtle text-primary"
                                                })">
                                                    @product.StockStatus
                                                </span>
                                                @if (product.StockQuantity.HasValue)
                                                {
                                                    <div class="text-muted small mt-1">@product.StockQuantity.Value.ToString("N0") عدد</div>
                                                }
                                            </td>
                                            <td class="text-center">
                                                @if (product.IsActive)
                                                {
                                                    <span class="badge bg-success-subtle text-success">فعال</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary-subtle text-secondary">غیرفعال</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a asp-area="Restaurant" asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-outline-secondary" title="ویرایش">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" data-product-id="@product.Id" data-product-name="@product.Name" title="حذف">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal حذف -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">حذف محصول</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-area="Restaurant" asp-controller="Product" asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" id="deleteProductId" />
                <div class="modal-body">
                    <p>آیا از حذف محصول <strong id="deleteProductName"></strong> مطمئن هستید؟</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">انصراف</button>
                    <button type="submit" class="btn btn-danger">حذف محصول</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const deleteModal = document.getElementById('deleteModal');
        if (deleteModal) {
            deleteModal.addEventListener('show.bs.modal', function (event) {
                const button = event.relatedTarget;
                const productId = button.getAttribute('data-product-id');
                const productName = button.getAttribute('data-product-name');

                const productIdInput = deleteModal.querySelector('#deleteProductId');
                const productNameLabel = deleteModal.querySelector('#deleteProductName');

                if (productIdInput) {
                    productIdInput.value = productId;
                }

                if (productNameLabel) {
                    productNameLabel.textContent = productName;
                }
            });
        }
    </script>
}
