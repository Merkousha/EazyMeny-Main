@model EazyMenu.Web.Areas.Restaurant.Models.EditContentViewModel

@{
    ViewData["Title"] = $"ویرایش محتوا: {Model.SectionTitle}";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">
                        <i class="bi bi-pencil-square me-2"></i>
                        ویرایش محتوا
                    </h2>
                    <p class="text-muted mb-0">
                        بخش: <strong>@Model.SectionTitle</strong>
                        @if (Model.IsRequired)
                        {
                            <span class="badge bg-danger ms-2">الزامی</span>
                        }
                    </p>
                </div>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-right me-2"></i>
                    بازگشت
                </a>
            </div>
        </div>
    </div>

    <form asp-action="EditContent" method="post" id="contentForm">
        <input type="hidden" asp-for="SectionType" />
        <input type="hidden" asp-for="SectionTitle" />
        <input type="hidden" asp-for="IsRequired" />
        
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="row">
            <!-- محتوای HTML -->
            <div class="col-lg-8 mb-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-3">
                            <i class="bi bi-file-earmark-code me-2 text-primary"></i>
                            محتوای HTML
                        </h5>

                        <div class="mb-3">
                            <label asp-for="CustomContent" class="form-label">
                                محتوای سفارشی
                                <span class="text-muted small">(HTML)</span>
                            </label>
                            <textarea asp-for="CustomContent" 
                                      id="customContentEditor"
                                      placeholder="<div class='section'>
    <h2>عنوان بخش</h2>
    <p>متن توضیحات...</p>
</div>"></textarea>
                            <span asp-validation-for="CustomContent" class="text-danger small"></span>
                            <div class="mt-2 d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    <i class="bi bi-info-circle me-1"></i>
                                    حداکثر 20,000 کاراکتر - ویرایشگر WYSIWYG فعال است
                                </small>
                                <small class="text-muted">
                                    تعداد کاراکترها: <span id="charCount">0</span> / 20,000
                                </small>
                            </div>
                        </div>

                        <!-- راهنمای سریع HTML -->
                        <div class="accordion" id="htmlGuideAccordion">
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" 
                                            data-bs-toggle="collapse" data-bs-target="#htmlGuide">
                                        <i class="bi bi-book me-2"></i>
                                        راهنمای سریع HTML
                                    </button>
                                </h2>
                                <div id="htmlGuide" class="accordion-collapse collapse" 
                                     data-bs-parent="#htmlGuideAccordion">
                                    <div class="accordion-body">
                                        <div class="row small">
                                            <div class="col-md-6">
                                                <h6 class="fw-bold">تگ‌های متنی:</h6>
                                                <ul class="font-monospace">
                                                    <li>&lt;h1&gt;عنوان اصلی&lt;/h1&gt;</li>
                                                    <li>&lt;h2&gt;عنوان فرعی&lt;/h2&gt;</li>
                                                    <li>&lt;p&gt;پاراگراف&lt;/p&gt;</li>
                                                    <li>&lt;strong&gt;متن ضخیم&lt;/strong&gt;</li>
                                                    <li>&lt;em&gt;متن کج&lt;/em&gt;</li>
                                                </ul>
                                            </div>
                                            <div class="col-md-6">
                                                <h6 class="fw-bold">تگ‌های ساختاری:</h6>
                                                <ul class="font-monospace">
                                                    <li>&lt;div class="row"&gt;...&lt;/div&gt;</li>
                                                    <li>&lt;ul&gt;&lt;li&gt;آیتم&lt;/li&gt;&lt;/ul&gt;</li>
                                                    <li>&lt;a href="#"&gt;لینک&lt;/a&gt;</li>
                                                    <li>&lt;img src="..." alt="..."&gt;</li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- تنظیمات -->
            <div class="col-lg-4 mb-4">
                <div class="card border-0 shadow-sm mb-3">
                    <div class="card-body">
                        <h5 class="card-title mb-3">
                            <i class="bi bi-gear me-2 text-primary"></i>
                            تنظیمات
                        </h5>

                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="UseDefaultContent" 
                                       class="form-check-input" 
                                       type="checkbox" 
                                       id="useDefaultContent">
                                <label class="form-check-label" for="useDefaultContent">
                                    استفاده از محتوای پیش‌فرض
                                </label>
                            </div>
                            <small class="text-muted d-block mt-1">
                                <i class="bi bi-info-circle me-1"></i>
                                در صورت فعال‌سازی، محتوای سفارشی نادیده گرفته می‌شود
                            </small>
                        </div>

                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="IsVisible" 
                                       class="form-check-input" 
                                       type="checkbox" 
                                       id="isVisible">
                                <label class="form-check-label" for="isVisible">
                                    نمایش در وب‌سایت
                                </label>
                            </div>
                            <small class="text-muted d-block mt-1">
                                <i class="bi bi-info-circle me-1"></i>
                                در صورت غیرفعال‌سازی، این بخش در وب‌سایت نمایش داده نمی‌شود
                            </small>
                        </div>

                        @if (Model.IsRequired)
                        {
                            <div class="alert alert-warning mb-0">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                <strong>توجه:</strong> این بخش الزامی است و باید در وب‌سایت نمایش داده شود.
                            </div>
                        }
                    </div>
                </div>

                <!-- محتوای پیش‌فرض -->
                @if (!string.IsNullOrEmpty(Model.DefaultContent))
                {
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title mb-3">
                                <i class="bi bi-file-earmark me-2 text-primary"></i>
                                محتوای پیش‌فرض
                            </h5>
                            <div class="default-content-preview p-3 bg-light rounded">
                                <pre class="mb-0 small font-monospace" 
                                     style="max-height: 300px; overflow-y: auto; white-space: pre-wrap;">@Model.DefaultContent</pre>
                            </div>
                            <button type="button" class="btn btn-sm btn-outline-secondary mt-2 w-100" 
                                    onclick="copyDefaultContent()">
                                <i class="bi bi-clipboard me-1"></i>
                                کپی محتوای پیش‌فرض
                            </button>
                        </div>
                    </div>
                }

                <!-- دکمه‌های عملیات -->
                <div class="card border-0 shadow-sm mt-3">
                    <div class="card-body">
                        <h5 class="card-title mb-3">
                            <i class="bi bi-lightning-charge me-2 text-primary"></i>
                            عملیات
                        </h5>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-2"></i>
                                ذخیره تغییرات
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-2"></i>
                                انصراف
                            </a>
                            <a asp-action="Preview" target="_blank" class="btn btn-outline-info">
                                <i class="bi bi-eye me-2"></i>
                                پیش‌نمایش وب‌سایت
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <!-- TinyMCE CDN -->
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
    
    <script>
        let editorInstance = null;
        
        // Initialize TinyMCE
        document.addEventListener('DOMContentLoaded', function() {
            tinymce.init({
                selector: '#customContentEditor',
                height: 500,
                menubar: false,
                directionality: 'rtl', // RTL Support
                language: 'fa_IR',
                language_url: '/js/tinymce-lang-fa.js', // Optional: Persian language pack
                plugins: [
                    'advlist', 'autolink', 'lists', 'link', 'image', 'charmap',
                    'anchor', 'searchreplace', 'visualblocks', 'code', 'fullscreen',
                    'insertdatetime', 'media', 'table', 'help', 'wordcount', 'directionality'
                ],
                toolbar: 'undo redo | formatselect | bold italic underline strikethrough | ' +
                         'alignleft aligncenter alignright alignjustify | ' +
                         'bullist numlist outdent indent | ltr rtl | ' +
                         'link image media | table | forecolor backcolor | ' +
                         'code fullscreen | removeformat help',
                content_style: 'body { font-family:IRANSans,Tahoma,Arial,sans-serif; font-size:14px; direction:rtl; }',
                
                // Image Upload (Simple - you can enhance with actual upload endpoint)
                images_upload_handler: function (blobInfo, success, failure) {
                    // For now, convert to base64 (not recommended for production)
                    var reader = new FileReader();
                    reader.onload = function() {
                        success(reader.result);
                    };
                    reader.readAsDataURL(blobInfo.blob());
                },
                
                // Auto-save to textarea for form submission
                setup: function(editor) {
                    editorInstance = editor;
                    
                    editor.on('init', function() {
                        updateCharCount();
                        checkUseDefaultContent();
                    });
                    
                    editor.on('change keyup', function() {
                        editor.save(); // Save to textarea
                        updateCharCount();
                    });
                }
            });
        });

        // شمارش کاراکترها
        function updateCharCount() {
            if (editorInstance) {
                const content = editorInstance.getContent({format: 'text'});
                const length = content.length;
                const charCount = document.getElementById('charCount');
                
                charCount.textContent = length.toLocaleString('fa-IR');
                
                if (length > 20000) {
                    charCount.parentElement.classList.add('text-danger');
                    charCount.parentElement.classList.remove('text-muted');
                } else {
                    charCount.parentElement.classList.remove('text-danger');
                    charCount.parentElement.classList.add('text-muted');
                }
            }
        }

        // کپی محتوای پیش‌فرض
        function copyDefaultContent() {
            const defaultContent = `@Html.Raw(Model.DefaultContent?.Replace("\r", "").Replace("\n", "\\n").Replace("'", "\\'"))`;
            
            if (confirm('آیا مطمئن هستید که می‌خواهید محتوای فعلی را با محتوای پیش‌فرض جایگزین کنید؟')) {
                if (editorInstance) {
                    editorInstance.setContent(defaultContent);
                }
                
                // نمایش پیام موفقیت
                const alert = document.createElement('div');
                alert.className = 'alert alert-success alert-dismissible fade show position-fixed top-0 start-50 translate-middle-x mt-3';
                alert.style.zIndex = '9999';
                alert.innerHTML = `
                    <i class="bi bi-check-circle me-2"></i>
                    محتوای پیش‌فرض کپی شد!
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                `;
                document.body.appendChild(alert);
                
                setTimeout(() => {
                    alert.remove();
                }, 3000);
            }
        }

        // غیرفعال کردن ویرایشگر اگر UseDefaultContent فعال باشد
        function checkUseDefaultContent() {
            const useDefaultCheckbox = document.getElementById('useDefaultContent');
            
            function toggleEditor() {
                if (editorInstance) {
                    if (useDefaultCheckbox.checked) {
                        editorInstance.mode.set('readonly');
                        document.querySelector('.tox-tinymce').style.opacity = '0.6';
                    } else {
                        editorInstance.mode.set('design');
                        document.querySelector('.tox-tinymce').style.opacity = '1';
                    }
                }
            }
            
            useDefaultCheckbox.addEventListener('change', toggleEditor);
            toggleEditor();
        }

        // Form Submit - Ensure TinyMCE content is saved
        document.getElementById('contentForm').addEventListener('submit', function(e) {
            if (editorInstance) {
                editorInstance.save();
            }
        });
    </script>
}

@section Styles {
    <style>
        .font-monospace {
            font-family: 'Courier New', Consolas, monospace;
            font-size: 0.875rem;
            line-height: 1.5;
        }
        
        .default-content-preview {
            border: 1px solid #dee2e6;
        }
        
        /* TinyMCE RTL Support */
        .tox-tinymce {
            border: 1px solid #dee2e6;
            border-radius: 0.375rem;
        }
        
        .tox .tox-toolbar__primary {
            background: #f8f9fa !important;
        }
        
        /* Loading State */
        #customContentEditor {
            min-height: 500px;
            border: 1px solid #dee2e6;
            border-radius: 0.375rem;
            padding: 10px;
        }
    </style>
}
