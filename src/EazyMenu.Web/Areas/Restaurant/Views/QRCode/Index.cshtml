@{
    ViewData["Title"] = "QR Code رستوران";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="bi bi-qr-code me-2"></i>QR Code منوی دیجیتال</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home" asp-area="">خانه</a></li>
                    <li class="breadcrumb-item active">QR Code</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>اطلاعات منوی دیجیتال</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">نام رستوران:</label>
                        <p class="form-control-plaintext">@ViewBag.RestaurantName</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">آدرس منو:</label>
                        <div class="input-group">
                            <input type="text" class="form-control" value="@ViewBag.MenuUrl" id="menuUrlInput" readonly>
                            <button class="btn btn-outline-secondary" type="button" onclick="copyUrl()">
                                <i class="bi bi-clipboard"></i>
                            </button>
                        </div>
                    </div>
                    <div class="alert alert-info">
                        <i class="bi bi-lightbulb me-2"></i>
                        مشتریان شما می‌توانند با اسکن QR Code به منوی دیجیتال دسترسی داشته باشند.
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mt-3">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-gear me-2"></i>عملیات</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <form asp-action="Regenerate" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-arrow-clockwise me-2"></i>
                                ساخت مجدد QR Code
                            </button>
                        </form>
                        <a asp-action="Download" class="btn btn-success">
                            <i class="bi bi-download me-2"></i>
                            دانلود QR Code
                        </a>
                        <a href="@ViewBag.MenuUrl" target="_blank" class="btn btn-outline-info">
                            <i class="bi bi-eye me-2"></i>
                            مشاهده منوی عمومی
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-qr-code me-2"></i>پیش‌نمایش QR Code</h5>
                </div>
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(ViewBag.QRCodeUrl))
                    {
                        <div class="qr-code-container p-4 bg-white border rounded d-inline-block">
                            <img src="@ViewBag.QRCodeUrl" alt="QR Code" class="img-fluid" style="max-width: 400px;">
                        </div>
                        <p class="mt-3 text-muted">
                            <small>برای چاپ، روی دکمه "دانلود QR Code" کلیک کنید</small>
                        </p>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            QR Code هنوز ساخته نشده است. روی دکمه "ساخت مجدد QR Code" کلیک کنید.
                        </div>
                    }
                </div>
            </div>

            <div class="card shadow-sm mt-3">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-printer me-2"></i>راهنمای استفاده</h5>
                </div>
                <div class="card-body">
                    <ol class="mb-0">
                        <li class="mb-2">QR Code را دانلود کنید</li>
                        <li class="mb-2">روی میزهای رستوران چاپ کنید</li>
                        <li class="mb-2">مشتریان با اسکن QR Code به منو دسترسی دارند</li>
                        <li>سفارش آنلاین بدون نیاز به نصب اپلیکیشن!</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function copyUrl() {
            const input = document.getElementById('menuUrlInput');
            input.select();
            document.execCommand('copy');
            
            const btn = event.target.closest('button');
            const originalHtml = btn.innerHTML;
            btn.innerHTML = '<i class="bi bi-check"></i>';
            btn.classList.add('btn-success');
            btn.classList.remove('btn-outline-secondary');
            
            setTimeout(() => {
                btn.innerHTML = originalHtml;
                btn.classList.remove('btn-success');
                btn.classList.add('btn-outline-secondary');
            }, 2000);
        }
    </script>
}
