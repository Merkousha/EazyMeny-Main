@model EazyMenu.Application.Common.Models.Subscription.SubscriptionDetailsDto
@{
    ViewData["Title"] = $"اشتراک - {Model.RestaurantName}";

    string GetStatusBadgeClass(string status) => status switch
    {
        "آزمایشی" => "bg-info",
        "فعال" => "bg-success",
        "در حال انقضا" => "bg-warning text-dark",
        "منقضی شده" => "bg-danger",
        "معلق" => "bg-secondary",
        "لغو شده" => "bg-dark",
        _ => "bg-light text-dark"
    };

    string GetPlanBadgeClass(string plan) => plan switch
    {
        "پایه" => "bg-info",
        "استاندارد" => "bg-primary",
        "پیشرفته" => "bg-success",
        _ => "bg-secondary"
    };
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-end">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">خانه</a></li>
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Subscription" asp-action="Index">اشتراک‌ها</a></li>
                    <li class="breadcrumb-item active">جزئیات</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8">
                <div class="card mb-3">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h3 class="card-title">اطلاعات اشتراک</h3>
                        <div>
                            <span class="badge @GetPlanBadgeClass(Model.Plan) me-2">@Model.Plan</span>
                            <span class="badge @GetStatusBadgeClass(Model.Status)">@Model.Status</span>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="fw-bold mb-1">رستوران</div>
                                <div>@Model.RestaurantName</div>
                                <div class="text-muted">@Model.RestaurantPhone</div>
                            </div>
                            <div class="col-md-6">
                                <div class="fw-bold mb-1">مبلغ اشتراک</div>
                                <div class="fs-5 text-success">@Model.Amount.ToString("N0") تومان</div>
                            </div>
                            <div class="col-md-6">
                                <div class="fw-bold mb-1">تاریخ شروع</div>
                                <div>@Model.StartDate.ToString("yyyy/MM/dd")</div>
                            </div>
                            <div class="col-md-6">
                                <div class="fw-bold mb-1">تاریخ پایان</div>
                                <div>@Model.EndDate.ToString("yyyy/MM/dd")</div>
                            </div>
                            <div class="col-md-6">
                                <div class="fw-bold mb-1">روزهای باقیمانده</div>
                                <div>
                                    @if (Model.DaysRemaining < 0)
                                    {
                                        <span class="badge bg-danger">منقضی شده (@(Model.DaysRemaining * -1) روز قبل)</span>
                                    }
                                    else if (Model.DaysRemaining <= 7)
                                    {
                                        <span class="badge bg-warning text-dark">@Model.DaysRemaining روز (نیاز به تمدید)</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">@Model.DaysRemaining روز</span>
                                    }
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="fw-bold mb-1">تمدید خودکار</div>
                                <div>
                                    @if (Model.AutoRenew)
                                    {
                                        <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i>فعال</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary"><i class="bi bi-x-circle me-1"></i>غیرفعال</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card mb-3">
                    <div class="card-header">
                        <h3 class="card-title">وضعیت اشتراک</h3>
                    </div>
                    <div class="card-body">
                        <div class="text-center mb-3">
                            @if (Model.IsActive)
                            {
                                <i class="bi bi-check-circle display-3 text-success"></i>
                                <h5 class="mt-2">اشتراک فعال</h5>
                            }
                            else
                            {
                                <i class="bi bi-x-circle display-3 text-danger"></i>
                                <h5 class="mt-2">اشتراک غیرفعال</h5>
                            }
                        </div>
                        
                        @if (Model.IsExpiringSoon && Model.IsActive)
                        {
                            <div class="alert alert-warning mb-0">
                                <i class="bi bi-exclamation-triangle me-1"></i>
                                <strong>هشدار:</strong> این اشتراک در @Model.DaysRemaining روز آینده منقضی می‌شود.
                            </div>
                        }
                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-header">
                        <h3 class="card-title">تاریخچه</h3>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled mb-0">
                            <li class="mb-2">
                                <i class="bi bi-calendar-plus text-primary me-2"></i>
                                <strong>ثبت اولیه:</strong><br>
                                <span class="text-muted">@Model.CreatedAt.ToString("yyyy/MM/dd HH:mm")</span>
                            </li>
                            <li>
                                <i class="bi bi-calendar-check text-success me-2"></i>
                                <strong>آخرین بروزرسانی:</strong><br>
                                <span class="text-muted">@Model.UpdatedAt.ToString("yyyy/MM/dd HH:mm")</span>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">عملیات</h3>
                    </div>
                    <div class="card-body">
                        <a asp-area="Admin" asp-controller="Restaurant" asp-action="Details" asp-route-id="@Model.RestaurantId" class="btn btn-outline-primary btn-block mb-2 w-100">
                            <i class="bi bi-shop me-1"></i>
                            مشاهده رستوران
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-12">
                <a asp-area="Admin" asp-controller="Subscription" asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-right me-1"></i>
                    بازگشت به لیست
                </a>
            </div>
        </div>
    </div>
</section>
