@model List<EazyMenu.Application.Common.Models.Restaurant.RestaurantListDto>

@{
    ViewData["Title"] = "مدیریت رستوران‌ها";
}

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2>
                    <i class="bi bi-shop"></i>
                    مدیریت رستوران‌ها
                </h2>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>
                    افزودن رستوران جدید
                </a>
            </div>
        </div>
    </div>

    <!-- Alert Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Restaurants Table -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    @if (Model == null || !Model.Any())
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-shop" style="font-size: 4rem; color: #ccc;"></i>
                            <p class="mt-3 text-muted">هنوز رستورانی ثبت نشده است</p>
                            <a asp-action="Create" class="btn btn-primary mt-2">
                                <i class="bi bi-plus-circle"></i>
                                ایجاد اولین رستوران
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>نام رستوران</th>
                                        <th>آدرس</th>
                                        <th>تلفن</th>
                                        <th>صاحب رستوران</th>
                                        <th>وضعیت</th>
                                        <th>امکانات</th>
                                        <th>QR Code</th>
                                        <th>تاریخ ایجاد</th>
                                        <th>عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var restaurant in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@restaurant.Name</strong>
                                                @if (!string.IsNullOrEmpty(restaurant.Slug))
                                                {
                                                    <br />
                                                    <small class="text-muted">/@restaurant.Slug</small>
                                                }
                                            </td>
                                            <td>
                                                <small>@restaurant.Address</small>
                                            </td>
                                            <td>
                                                <span dir="ltr">@restaurant.PhoneNumber</span>
                                            </td>
                                            <td>
                                                @restaurant.OwnerName
                                            </td>
                                            <td>
                                                @if (restaurant.IsActive)
                                                {
                                                    <span class="badge bg-success">فعال</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">غیرفعال</span>
                                                }
                                            </td>
                                            <td>
                                                @if (restaurant.AcceptOnlineOrders)
                                                {
                                                    <i class="bi bi-bag-check text-success" title="سفارش آنلاین"></i>
                                                }
                                                @if (restaurant.AcceptReservations)
                                                {
                                                    <i class="bi bi-calendar-check text-primary" title="رزرو میز"></i>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(restaurant.QRCodeUrl))
                                                {
                                                    <a href="@restaurant.QRCodeUrl" target="_blank" class="btn btn-sm btn-outline-secondary">
                                                        <i class="bi bi-qr-code"></i>
                                                    </a>
                                                }
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    @restaurant.CreatedAt.ToString("yyyy/MM/dd")
                                                </small>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@restaurant.Id" 
                                                       class="btn btn-sm btn-info" title="جزئیات">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@restaurant.Id" 
                                                       class="btn btn-sm btn-warning" title="ویرایش">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-sm btn-danger" 
                                                            data-bs-toggle="modal" 
                                                            data-bs-target="#deleteModal@(restaurant.Id)"
                                                            title="حذف">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>

                                                <!-- Delete Confirmation Modal -->
                                                <div class="modal fade" id="deleteModal@(restaurant.Id)" tabindex="-1" aria-hidden="true">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title">تایید حذف</h5>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <p>آیا از حذف رستوران <strong>@restaurant.Name</strong> اطمینان دارید؟</p>
                                                                <p class="text-danger">
                                                                    <i class="bi bi-exclamation-triangle"></i>
                                                                    این عملیات قابل بازگشت نیست!
                                                                </p>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">انصراف</button>
                                                                <form asp-action="Delete" asp-route-id="@restaurant.Id" method="post" class="d-inline">
                                                                    @Html.AntiForgeryToken()
                                                                    <button type="submit" class="btn btn-danger">حذف</button>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Statistics -->
                        <div class="mt-3">
                            <small class="text-muted">
                                <i class="bi bi-info-circle"></i>
                                تعداد کل: @Model.Count رستوران |
                                فعال: @Model.Count(r => r.IsActive) |
                                غیرفعال: @Model.Count(r => !r.IsActive)
                            </small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            $('.alert').alert('close');
        }, 5000);
    </script>
}
