@{
    ViewData["Title"] = "تماس با ما - EazyMenu";
}

@section Styles {
<style>
    .contact-hero {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 80px 0 60px;
        margin-bottom: 60px;
    }

    .contact-card {
        background: white;
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        height: 100%;
    }

    .contact-icon {
        width: 70px;
        height: 70px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        color: white;
        margin: 0 auto 20px;
    }

    .form-control:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.25rem rgba(102, 126, 234, 0.25);
    }

    .info-box {
        background: #f8f9fa;
        padding: 30px;
        border-radius: 15px;
        margin-bottom: 30px;
    }

    .info-item {
        display: flex;
        align-items: center;
        padding: 15px 0;
        border-bottom: 1px solid #e2e8f0;
    }

    .info-item:last-child {
        border-bottom: none;
    }

    .info-item i {
        font-size: 1.5rem;
        color: #667eea;
        margin-left: 15px;
        width: 30px;
    }

    .social-links {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 30px;
    }

    .social-link {
        width: 50px;
        height: 50px;
        background: white;
        border: 2px solid #667eea;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: #667eea;
        transition: all 0.3s;
        text-decoration: none;
    }

    .social-link:hover {
        background: #667eea;
        color: white;
        transform: scale(1.1);
    }

    .map-container {
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        height: 400px;
        background: #f8f9fa;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    @@media (max-width: 768px) {
        .contact-hero {
            padding: 50px 0 30px;
        }
        
        .contact-card {
            padding: 25px;
        }
    }
</style>
}

<!-- Hero Section -->
<section class="contact-hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="display-4 mb-4">تماس با ما</h1>
                <p class="lead">
                    سوالی دارید؟ تیم پشتیبانی ما آماده پاسخگویی است
                </p>
            </div>
        </div>
    </div>
</section>

<section class="pb-5">
    <div class="container">
        <div class="row g-4">
            <!-- Contact Form -->
            <div class="col-lg-8">
                <div class="contact-card">
                    <h3 class="mb-4">فرم تماس</h3>
                    <form id="contactForm">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="name" class="form-label">نام و نام خانوادگی</label>
                                <input type="text" class="form-control" id="name" required>
                            </div>
                            <div class="col-md-6">
                                <label for="phone" class="form-label">شماره تماس</label>
                                <input type="tel" class="form-control" id="phone" placeholder="09123456789" required>
                            </div>
                            <div class="col-md-12">
                                <label for="email" class="form-label">ایمیل</label>
                                <input type="email" class="form-control" id="email" required>
                            </div>
                            <div class="col-md-12">
                                <label for="subject" class="form-label">موضوع</label>
                                <select class="form-select" id="subject" required>
                                    <option value="">انتخاب کنید...</option>
                                    <option value="support">پشتیبانی فنی</option>
                                    <option value="sales">فروش و خرید</option>
                                    <option value="billing">مسائل مالی</option>
                                    <option value="suggestion">پیشنهاد و انتقاد</option>
                                    <option value="other">سایر موارد</option>
                                </select>
                            </div>
                            <div class="col-md-12">
                                <label for="message" class="form-label">پیام شما</label>
                                <textarea class="form-control" id="message" rows="6" required></textarea>
                            </div>
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="bi bi-send me-2"></i>ارسال پیام
                                </button>
                            </div>
                        </div>
                    </form>
                    <div id="formMessage" class="mt-3" style="display: none;"></div>
                </div>
            </div>

            <!-- Contact Info -->
            <div class="col-lg-4">
                <div class="info-box">
                    <h4 class="mb-3">اطلاعات تماس</h4>
                    <div class="info-item">
                        <i class="bi bi-telephone-fill"></i>
                        <div>
                            <strong>تلفن:</strong><br>
                            021-12345678
                        </div>
                    </div>
                    <div class="info-item">
                        <i class="bi bi-phone-fill"></i>
                        <div>
                            <strong>موبایل:</strong><br>
                            0912-3456789
                        </div>
                    </div>
                    <div class="info-item">
                        <i class="bi bi-envelope-fill"></i>
                        <div>
                            <strong>ایمیل:</strong><br>
                            info@eazymenu.ir
                        </div>
                    </div>
                    <div class="info-item">
                        <i class="bi bi-geo-alt-fill"></i>
                        <div>
                            <strong>آدرس:</strong><br>
                            تهران، خیابان ولیعصر، پلاک 123
                        </div>
                    </div>
                </div>

                <div class="info-box">
                    <h4 class="mb-3">ساعات پاسخگویی</h4>
                    <div class="info-item">
                        <i class="bi bi-clock-fill"></i>
                        <div>
                            <strong>شنبه تا پنجشنبه:</strong><br>
                            9:00 صبح - 18:00 عصر
                        </div>
                    </div>
                    <div class="info-item">
                        <i class="bi bi-clock-fill"></i>
                        <div>
                            <strong>جمعه:</strong><br>
                            تعطیل
                        </div>
                    </div>
                </div>

                <div class="text-center">
                    <h4 class="mb-3">شبکه‌های اجتماعی</h4>
                    <div class="social-links">
                        <a href="#" class="social-link" title="اینستاگرام">
                            <i class="bi bi-instagram"></i>
                        </a>
                        <a href="#" class="social-link" title="تلگرام">
                            <i class="bi bi-telegram"></i>
                        </a>
                        <a href="#" class="social-link" title="لینکدین">
                            <i class="bi bi-linkedin"></i>
                        </a>
                        <a href="#" class="social-link" title="توییتر">
                            <i class="bi bi-twitter"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Map Section -->
        <div class="row mt-5">
            <div class="col-12">
                <h3 class="text-center mb-4">موقعیت دفتر</h3>
                <div class="map-container">
                    <div class="text-center">
                        <i class="bi bi-geo-alt" style="font-size: 5rem; color: #667eea;"></i>
                        <p class="mt-3 text-muted">نقشه در نسخه بعدی اضافه خواهد شد</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Contact Cards -->
        <div class="row mt-5 g-4">
            <div class="col-md-4">
                <div class="contact-card text-center">
                    <div class="contact-icon">
                        <i class="bi bi-headset"></i>
                    </div>
                    <h4>پشتیبانی فنی</h4>
                    <p class="text-muted">برای مشکلات فنی و سوالات پشتیبانی</p>
                    <a href="mailto:support@eazymenu.ir" class="btn btn-outline-primary">
                        support@eazymenu.ir
                    </a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="contact-card text-center">
                    <div class="contact-icon">
                        <i class="bi bi-briefcase"></i>
                    </div>
                    <h4>واحد فروش</h4>
                    <p class="text-muted">برای خرید و مشاوره پلن‌ها</p>
                    <a href="mailto:sales@eazymenu.ir" class="btn btn-outline-primary">
                        sales@eazymenu.ir
                    </a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="contact-card text-center">
                    <div class="contact-icon">
                        <i class="bi bi-chat-dots"></i>
                    </div>
                    <h4>همکاری با ما</h4>
                    <p class="text-muted">برای فرصت‌های شغلی و همکاری</p>
                    <a href="mailto:hr@eazymenu.ir" class="btn btn-outline-primary">
                        hr@eazymenu.ir
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
<script>
    document.getElementById('contactForm').addEventListener('submit', function(e) {
        e.preventDefault();
        
        const messageDiv = document.getElementById('formMessage');
        
        // Simulate form submission
        messageDiv.className = 'alert alert-success';
        messageDiv.innerHTML = '<i class="bi bi-check-circle-fill me-2"></i>پیام شما با موفقیت ارسال شد. به زودی با شما تماس می‌گیریم.';
        messageDiv.style.display = 'block';
        
        // Reset form
        this.reset();
        
        // Hide message after 5 seconds
        setTimeout(() => {
            messageDiv.style.display = 'none';
        }, 5000);
    });
</script>
}
