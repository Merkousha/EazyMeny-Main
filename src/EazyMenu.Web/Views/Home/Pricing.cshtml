@section Scripts {
<script>
    let isYearly = false;
    
    const prices = {
        basic: { monthly: 500000, yearly: 400000 },
        standard: { monthly: 1000000, yearly: 800000 },
        premium: { monthly: 2000000, yearly: 1600000 }
    };
    
    function togglePricing() {
        isYearly = !isYearly;
        const toggle = document.getElementById('pricingToggle');
        toggle.classList.toggle('active');
        
        updatePrices();
    }
    
    function updatePrices() {
        const period = isYearly ? 'yearly' : 'monthly';
        const periodText = isYearly ? 'در سال' : 'در ماه';
        
        // Update prices
        document.getElementById('basicPrice').textContent = prices.basic[period].toLocaleString();
        document.getElementById('standardPrice').textContent = prices.standard[period].toLocaleString();
        document.getElementById('premiumPrice').textContent = prices.premium[period].toLocaleString();
        
        // Update periods
        document.getElementById('basicPeriod').textContent = periodText;
        document.getElementById('standardPeriod').textContent = periodText;
        document.getElementById('premiumPeriod').textContent = periodText;
    }
</script>
}
