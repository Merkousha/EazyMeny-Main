@using Microsoft.AspNetCore.Identity
@inject SignInManager<EazyMenu.Infrastructure.Identity.ApplicationIdentityUser> SignInManager

@{
    ViewData["Title"] = "EazyMenu - مدیریت هوشمند رستوران";
    Layout = null; // No layout - this is a partial view
}

@section Styles {
<style>
    /* Hero Section */
    .hero-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 120px 0 100px;
        text-align: center;
    }

    .hero-title {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 2rem;
    }

    .hero-subtitle {
        font-size: 1.25rem;
        margin-bottom: 3rem;
        opacity: 0.95;
        line-height: 1.8;
    }

    .hero-buttons .btn {
        padding: 14px 40px;
        font-size: 1.1rem;
        margin: 0 10px 15px;
        border-radius: 30px;
    }

    .btn-light {
        background: white;
        color: #667eea;
        border: none;
    }

    .btn-outline-light {
        border: 2px solid white;
        color: white;
    }

    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }

    /* Features Section */
    .features-section {
        padding: 100px 0;
        background: #f8f9fa;
    }

    .feature-card {
        text-align: center;
        padding: 40px 30px;
        background: white;
        border-radius: 15px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
        height: 100%;
        margin-bottom: 20px;
    }

    .feature-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.15);
    }

    .feature-icon {
        font-size: 3.5rem;
        color: #667eea;
        margin-bottom: 1.5rem;
    }

    .feature-title {
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 1.2rem;
        color: #2c3e50;
    }

    .feature-text {
        color: #6c757d;
        line-height: 1.8;
    }

    /* Pricing Section */
    .pricing-section {
        padding: 100px 0;
    }

    .section-title {
        text-align: center;
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        color: #2c3e50;
    }

    .section-subtitle {
        text-align: center;
        color: #6c757d;
        font-size: 1.1rem;
        margin-bottom: 4rem;
        line-height: 1.6;
    }

    .pricing-card {
        background: white;
        border-radius: 15px;
        padding: 50px 35px;
        text-align: center;
        box-shadow: 0 2px 15px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
        position: relative;
        height: 100%;
        margin-bottom: 30px;
    }

    .pricing-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 30px rgba(0,0,0,0.15);
    }

    .pricing-card.featured {
        border: 2px solid #667eea;
        transform: scale(1.05);
    }

    .pricing-badge {
        position: absolute;
        top: -15px;
        right: 50%;
        transform: translateX(50%);
        background: #667eea;
        color: white;
        padding: 5px 20px;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 600;
    }

    .pricing-plan {
        font-size: 1.5rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 1.5rem;
    }

    .pricing-price {
        font-size: 2.5rem;
        font-weight: 700;
        color: #667eea;
        margin-bottom: 1rem;
    }

    .pricing-period {
        color: #6c757d;
        margin-bottom: 2.5rem;
    }

    .pricing-features {
        list-style: none;
        padding: 0;
        margin-bottom: 2.5rem;
    }

    .pricing-features li {
        padding: 12px 0;
        color: #6c757d;
        border-bottom: 1px solid #f0f0f0;
    }

    .pricing-features li:last-child {
        border-bottom: none;
    }

    .pricing-features i {
        color: #28a745;
        margin-left: 8px;
    }

    /* CTA Section */
    .cta-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 100px 0;
        text-align: center;
    }

    .cta-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 2rem;
    }

    .cta-text {
        font-size: 1.2rem;
        margin-bottom: 2.5rem;
        opacity: 0.95;
        line-height: 1.7;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .hero-title {
            font-size: 2rem;
        }

        .hero-subtitle {
            font-size: 1.1rem;
        }

        .section-title {
            font-size: 1.8rem;
        }

        .pricing-card.featured {
            transform: scale(1);
        }

        .hero-buttons .btn {
            margin: 5px;
        }
    }
</style>
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h1 class="hero-title">مدیریت هوشمند رستوران شما</h1>
                <p class="hero-subtitle">با ایزی‌منو، رستوران خود را دیجیتال کنید. منوی دیجیتال، سفارش آنلاین و مدیریت کامل در یک پلتفرم</p>
                <div class="hero-buttons">
                    <a href="/Account/Register" class="btn btn-light btn-lg">شروع رایگان</a>
                    <a href="#features" class="btn btn-outline-light btn-lg">مشاهده امکانات</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section id="features" class="features-section">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-lg-8 text-center">
                <h2 class="section-title">چرا ایزی‌منو؟</h2>
                <p class="section-subtitle">همه چیز برای مدیریت بهتر رستوران شما</p>
            </div>
        </div>

        <div class="row g-4 mb-4">
            <div class="col-md-4 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">📱</div>
                    <h3 class="feature-title">منوی دیجیتال</h3>
                    <p class="feature-text">منوی زیبا و آنلاین با QR Code برای مشتریان. بدون نیاز به چاپ منو</p>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">🛒</div>
                    <h3 class="feature-title">سفارش آنلاین</h3>
                    <p class="feature-text">مشتریان می‌توانند از طریق موبایل سفارش دهند. افزایش فروش تضمینی</p>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">📊</div>
                    <h3 class="feature-title">مدیریت هوشمند</h3>
                    <p class="feature-text">پنل کاربری ساده برای مدیریت منو، محصولات و سفارش‌ها</p>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">💳</div>
                    <h3 class="feature-title">پرداخت آنلاین</h3>
                    <p class="feature-text">درگاه پرداخت امن زرین‌پال برای دریافت آنلاین پول</p>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">📅</div>
                    <h3 class="feature-title">رزرو میز</h3>
                    <p class="feature-text">سیستم رزرو آنلاین میز برای مشتریان. مدیریت آسان رزروها</p>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">🌐</div>
                    <h3 class="feature-title">وب‌سایت اختصاصی</h3>
                    <p class="feature-text">وب‌سایت رستوران خود را در چند دقیقه بسازید. بدون نیاز به برنامه‌نویسی</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Pricing Section -->
<section id="pricing" class="pricing-section">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-lg-8 text-center">
                <h2 class="section-title">قیمت‌گذاری شفاف</h2>
                <p class="section-subtitle">پلن مناسب رستوران خود را انتخاب کنید</p>
            </div>
        </div>

        <div class="row g-5 justify-content-center">
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="pricing-card">
                    <h3 class="pricing-plan">پایه</h3>
                    <div class="pricing-price">۵۰۰,۰۰۰ <small>تومان</small></div>
                    <p class="pricing-period">ماهانه</p>
                    <ul class="pricing-features">
                        <li><i class="bi bi-check-circle-fill"></i> تا ۵۰ محصول</li>
                        <li><i class="bi bi-check-circle-fill"></i> منوی دیجیتال</li>
                        <li><i class="bi bi-check-circle-fill"></i> QR Code</li>
                        <li><i class="bi bi-check-circle-fill"></i> پشتیبانی ایمیل</li>
                    </ul>
                    <a href="/Account/Register" class="btn btn-outline-primary btn-lg">شروع کنید</a>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 mb-4">
                <div class="pricing-card featured">
                    <div class="pricing-badge">محبوب‌ترین</div>
                    <h3 class="pricing-plan">استاندارد</h3>
                    <div class="pricing-price">۱,۰۰۰,۰۰۰ <small>تومان</small></div>
                    <p class="pricing-period">ماهانه</p>
                    <ul class="pricing-features">
                        <li><i class="bi bi-check-circle-fill"></i> تا ۲۰۰ محصول</li>
                        <li><i class="bi bi-check-circle-fill"></i> سفارش آنلاین</li>
                        <li><i class="bi bi-check-circle-fill"></i> رزرو میز</li>
                        <li><i class="bi bi-check-circle-fill"></i> وب‌سایت اختصاصی</li>
                        <li><i class="bi bi-check-circle-fill"></i> پشتیبانی ۲۴/۷</li>
                    </ul>
                    <a href="/Account/Register" class="btn btn-primary btn-lg">شروع کنید</a>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 mb-4">
                <div class="pricing-card">
                    <h3 class="pricing-plan">حرفه‌ای</h3>
                    <div class="pricing-price">۲,۰۰۰,۰۰۰ <small>تومان</small></div>
                    <p class="pricing-period">ماهانه</p>
                    <ul class="pricing-features">
                        <li><i class="bi bi-check-circle-fill"></i> محصولات نامحدود</li>
                        <li><i class="bi bi-check-circle-fill"></i> تمام امکانات استاندارد</li>
                        <li><i class="bi bi-check-circle-fill"></i> گزارش‌گیری پیشرفته</li>
                        <li><i class="bi bi-check-circle-fill"></i> تیکت اولویت‌دار</li>
                        <li><i class="bi bi-check-circle-fill"></i> مشاور اختصاصی</li>
                    </ul>
                    <a href="/Account/Register" class="btn btn-outline-primary btn-lg">شروع کنید</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h2 class="cta-title">آماده شروع هستید؟</h2>
                <p class="cta-text">همین حالا رستوران خود را دیجیتال کنید و فروش خود را افزایش دهید</p>
                <a href="/Account/Register" class="btn btn-light btn-lg">شروع رایگان - بدون نیاز به کارت بانکی</a>
            </div>
        </div>
    </div>
</section>
