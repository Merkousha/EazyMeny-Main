@using Microsoft.AspNetCore.Identity
@inject SignInManager<EazyMenu.Infrastructure.Identity.ApplicationIdentityUser> SignInManager

@{
    ViewData["Title"] = "EazyMenu - سیستم مدیریت هوشمند رستوران";
}

@if (SignInManager.IsSignedIn(User))
{
    <!-- Authenticated users see dashboard -->
    <partial name="_Dashboard" />
}
else
{
    <!-- Guest users see landing page -->
    <partial name="LandingPage" />
}