@{
    ViewData["Title"] = "دسترسی محدود";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center" dir="rtl">
    <div class="col-12 col-md-6 col-lg-5">
        <div class="card shadow-sm border-0 mt-5">
            <div class="card-body p-5 text-center">
                <div class="mb-4">
                    <i class="bi bi-exclamation-triangle display-1 text-warning"></i>
                </div>
                
                <h2 class="fw-bold mb-3">دسترسی محدود</h2>
                <p class="text-muted mb-4">
                    متأسفانه شما دسترسی لازم برای مشاهده این صفحه را ندارید.
                </p>

                <div class="d-grid gap-2">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-house"></i> بازگشت به صفحه اصلی
                    </a>
                    <a asp-controller="Account" asp-action="Logout" class="btn btn-outline-secondary">
                        <i class="bi bi-box-arrow-right"></i> خروج از حساب کاربری
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
