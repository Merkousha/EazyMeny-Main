<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EazyMenu</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EazyMenu.Web.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow">
            <div class="container">
                <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-shop me-2"></i>EazyMenu
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door me-1"></i>صفحه اصلی
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">
                                <i class="bi bi-info-circle me-1"></i>درباره ما
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Features">
                                <i class="bi bi-star me-1"></i>امکانات
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Pricing">
                                <i class="bi bi-tag me-1"></i>قیمت‌ها
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">
                                <i class="bi bi-envelope me-1"></i>تماس با ما
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="FAQ">
                                <i class="bi bi-question-circle me-1"></i>سوالات متداول
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" 
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle me-1"></i>@User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-start" aria-labelledby="userDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index">
                                        <i class="bi bi-speedometer2 me-2"></i>داشبورد
                                    </a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item">
                                                <i class="bi bi-box-arrow-right me-2"></i>خروج
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>ورود
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary ms-2" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-rocket-takeoff me-1"></i>شروع رایگان
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-white py-5 mt-5">
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-4">
                    <h5 class="mb-3">
                        <i class="bi bi-shop me-2"></i>EazyMenu
                    </h5>
                    <p class="text-white-50">
                        پلتفرم مدیریت رستوران برای دیجیتالی کردن کسب‌وکار شما
                    </p>
                    <div class="d-flex gap-2">
                        <a href="#" class="btn btn-outline-light btn-sm">
                            <i class="bi bi-instagram"></i>
                        </a>
                        <a href="#" class="btn btn-outline-light btn-sm">
                            <i class="bi bi-telegram"></i>
                        </a>
                        <a href="#" class="btn btn-outline-light btn-sm">
                            <i class="bi bi-linkedin"></i>
                        </a>
                    </div>
                </div>
                <div class="col-lg-2 col-md-4">
                    <h6 class="mb-3">دسترسی سریع</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a asp-controller="Home" asp-action="About" class="text-white-50 text-decoration-none">درباره ما</a>
                        </li>
                        <li class="mb-2">
                            <a asp-controller="Home" asp-action="Features" class="text-white-50 text-decoration-none">امکانات</a>
                        </li>
                        <li class="mb-2">
                            <a asp-controller="Home" asp-action="Pricing" class="text-white-50 text-decoration-none">قیمت‌ها</a>
                        </li>
                        <li class="mb-2">
                            <a asp-controller="Home" asp-action="Contact" class="text-white-50 text-decoration-none">تماس با ما</a>
                        </li>
                    </ul>
                </div>
                <div class="col-lg-2 col-md-4">
                    <h6 class="mb-3">خدمات</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a href="#" class="text-white-50 text-decoration-none">منوی دیجیتال</a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="text-white-50 text-decoration-none">سفارش آنلاین</a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="text-white-50 text-decoration-none">رزرو میز</a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="text-white-50 text-decoration-none">وب‌سایت</a>
                        </li>
                    </ul>
                </div>
                <div class="col-lg-2 col-md-4">
                    <h6 class="mb-3">پشتیبانی</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a asp-controller="Home" asp-action="FAQ" class="text-white-50 text-decoration-none">سوالات متداول</a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="text-white-50 text-decoration-none">آموزش</a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="text-white-50 text-decoration-none">وبلاگ</a>
                        </li>
                        <li class="mb-2">
                            <a asp-controller="Home" asp-action="Privacy" class="text-white-50 text-decoration-none">حریم خصوصی</a>
                        </li>
                    </ul>
                </div>
                <div class="col-lg-2">
                    <h6 class="mb-3">تماس</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2 text-white-50">
                            <i class="bi bi-telephone me-2"></i>021-12345678
                        </li>
                        <li class="mb-2 text-white-50">
                            <i class="bi bi-envelope me-2"></i>info@eazymenu.ir
                        </li>
                    </ul>
                </div>
            </div>
            <hr class="my-4 bg-white opacity-25">
            <div class="text-center text-white-50">
                <small>&copy; 1404 EazyMenu. تمامی حقوق محفوظ است.</small>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
